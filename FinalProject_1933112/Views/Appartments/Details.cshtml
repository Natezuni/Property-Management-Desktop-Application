@model IEnumerable<FinalProject_1933112.Models.Appartment>

@{
    ViewBag.Title = "Index";
}



<h2>Here are all the appartments!</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manager.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tenant.firstName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.Status == 1)
                {
                    @Html.DisplayFor(modelItem => item.Status)<text> - Available</text>
                }
                @if (item.Status == 0)
                {
                    @Html.DisplayFor(modelItem => item.Status)<text> - Not Available</text>
                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manager.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tenant.firstName)
            </td>

        </tr>
    }

</table>
