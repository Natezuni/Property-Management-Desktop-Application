@model FinalProject_1933112.Models.Manager

@{
    ViewBag.Title = "Managers Login Page";
}


@using (Html.BeginForm())
{
    <center>
        <div class="bs-example" style="border:2px solid gray;">

            <div class="form-group centerlook">
                <h1> Manager Login </h1>
            </div>
            <div class="form-group centerlook">
                <label>User Name: </label>
                @Html.EditorFor(model => model.FirstName)*
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
            <div class="form-group centerlook">
                <label>Password:</label>
                @Html.EditorFor(model => model.Password)*
                @Html.ValidationMessageFor(model => model.Password)

            </div>
            <div class="form-group error">
                @if (@ViewBag.Failedcount != null)
                {

                    <label> Failed Attempt count is: @ViewBag.Failedcount</label>
                }

                @if (@ViewBag.NotValidUser != null)
                {

                    <label> @ViewBag.NotValidUser</label>
                }
            </div>
            <div class="loginbtn">

                <input type="submit" value="Login" class="btn btn-primary" />

            </div>
            <button onclick="location.href='@Url.Action("Create", "Tenants")';return false;">Create an Account</button>
        </div>
        <button onclick="location.href='@Url.Action("LoginPage", "Home")';return false;">Back to main page</button>
    </center>
}

